<form action="/reset-password" method="post">

    <div class="login-container">

        <% if(errorMessage) { %>
            <div class="alert alert-danger" role="alert">
                <%= errorMessage %>
            </div>
        <% } %>

        <h2 class="fw-bold mb-2 text-uppercase">Reset Password</h2> 
        <div class="input-group margin">
          <span class="input-group-text ">Email</span>
          <input required="" name="email" type="email" aria-label="email" class="form-control" placeholder="enter your email">
        </div>

        <button type="submit" class="btn btn-md mt-2 lbtn login-button">Reset Password</button>

       <hr>
        <p><a href="/" class="link-info">Back to Home Page </a></p>
</form>
</div>

